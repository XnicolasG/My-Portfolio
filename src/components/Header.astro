<header id="myHeader" class=" sticky w-full  z-50 xs:fixed top-0 sm:block">
	<section class="flex flex-row flex-wrap justify-center items-center   p-2">

		<nav class="flex flex-row  justify-between w-full items-center px-2 xs:px-4 sm:px-6 md:px-6 ">
			<div class="flex w-1/3  hover:cursor-default">
				<a href="/">
					<h1 class="logo bg-gradient-to-r from-red-400 to-pink-600 bg-clip-text text-transparent text-4xl sm:text-6xl md:text-6xl lg:text-6xl"> - N </h1>
				</a>
			</div>
			
			<div class="flex flex-row justify-center items-center text-sm xs:text-sm sm:text-lg md:text-xl lg:text-xl xl:text-2xl gap-x-2 sm:gap-x-4 md:gap-x-6 lg:gap-x-12 w-64 sm:w-1/2 lg:w-1/2 mx-auto  rounded-2xl backdrop-blur-md bg-gray-900/80 py-2 sm:py-4">
				<a href="/" class=" font-semibold hover:bg-gradient-to-r from-red-500 to-pink-600 bg-clip-text hover:text-transparent  transition">About</a>
				<a href="#Experience" class=" font-semibold hover:bg-gradient-to-r from-red-500 to-pink-600 bg-clip-text hover:text-transparent  transition">Experience</a>
				<a href="#Proyects" class=" font-semibold hover:bg-gradient-to-r from-red-500 to-pink-600 bg-clip-text hover:text-transparent  transition">Proyects</a>
			</div>
		</nav>
	</section>
</header>

<style>
	@font-face {
		font-family: "Handwind";
		src: url("/fonts/Handwind.ttf") format("truetype");

	}
	.logo {
		font-family: "Handwind", cursive;
		font-weight: 900;
		
	}
	#myHeader{
		animation: scrollHeader linear both;
		animation-timeline: scroll();
		animation-range: 150px 200px;
		transition: all;
	}
	@keyframes scrollHeader {
		from{
			background: none;
		}
		to{
			background: rgba(223, 183, 243, 0.3);
			backdrop-filter: blur(5px);
		}
	}
</style>
