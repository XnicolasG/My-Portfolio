---
import Keyboard from "../icons/Keyboard.astro";
import Techonologies from "./Technologies.astro";
import Location from "../icons/Location.astro";
import React from "../icons/React.astro";
import JavaScript from "../icons/JavaScript.astro";
import TypeScript from "../icons/TypeScript.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import Css from "../icons/Css.astro";
import Sql from "../icons/Sql.astro";
import Tailwind from "../icons/Tailwind.astro";
import Sass from "../icons/Sass.astro";
import Notion from "../icons/Notion.astro";
import Slack from "../icons/Slack.astro"
import Excel from "../icons/Excel.astro"
import Teams from "../icons/Teams.astro"
import Supabase from "../icons/Supabase.astro";

const TECHS = [
   { name: "React", icon: React },
   { name: "TypeScript", icon: TypeScript },
   { name: "JavaScript", icon: JavaScript },
   { name: "Tailwind", icon: Tailwind },
   { name: "Astro", icon: AstroIcon },
   { name: "CSS", icon: Css },
   { name: "Sass", icon: Sass },
   { name: "SQL", icon: Sql },         
   { name: "Supabase", icon: Supabase },
];
const TOOLS = [
   { name: "Slack", icon: Slack },
   { name: "Notion", icon: Notion },
   { name: "Teams", icon: Teams  },
   { name: "Excel", icon: Excel },
   { name: "SQL", icon: Sql }, 
];
---

<section
    class="bg-gray-400/20 mx-auto rounded-lg my-4 p-4 transition-all sm:w-[90%]"
>
    <article class="flex items-center gap-x-3 mb-2">
        <Location
            class="size-14 sm:size-10 bg-gray-900 p-2 text-blue-600 hover:bg-gradient-to-r from-red-500 to-pink-600 rounded-xl hover:text-white transition-all"
        />
        <div class="">
            <p class="text-lg sm:text-sm md:text-lg font-semibold">
                Bogot√°, Colombia
            </p>
        </div>
    </article>
    <hr />
    <section class="mt-3 w-full">
            <div class="hand flex flex-row gap-x-2 items-center">
                <Keyboard
                    class="size-14 sm:size-10 bg-gray-900 p-2 text-blue-600 hover:bg-gradient-to-r from-red-500 to-pink-600 rounded-xl hover:text-white transition-all"
                />
                <p
                    class="text-lg sm:text-sm md:text-lg font-semibold transition-all"
                >
                    Tech & tools
            </p>
            </div>
        <p class="flex mx-auto w-full mt-3 overflow-hidden">
            <Techonologies TECHS={TECHS} />
        </p>
        <p class="flex mx-auto w-full mt-3 overflow-hidden">
            <Techonologies TOOLS={TOOLS} />
        </p>
    </section>
</section>

<style>
    details {
        list-style: none;
    }
    details summary {
    }
    details summary div::after {
        content: "üëáüèª";
        animation: bounce-hand 1s linear infinite;
    }
    details[open] summary div::after {
        -webkit-animation: rotate-emoji 0.4s ease-in-out both;
        animation: rotateHand 0.4s ease-in-out both;
    }
    @keyframes bounce-hand {
        0%,
        100% {
            transform: translateY(-25%);
            animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
        }
        50% {
            transform: translateY(0);
            animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }
    }
    @keyframes rotateHand {
        0% {
            transform: rotate(0);
            -webkit-transform: rotate(0);
        }
        100% {
            transform: rotate(180deg);
            -webkit-transform: rotate(180deg);
        }
    }
</style>
