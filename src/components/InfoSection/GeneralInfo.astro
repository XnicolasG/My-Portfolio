---
import Keyboard from "../icons/Keyboard.astro"
import Techonologies from "./Techonologies.astro"
---
<details class="mt-3 list-none">
    <summary class="flex gap-x-3 cursor-pointer ">
        <div
            class="hand flex flex-row gap-x-2 justify-center items-center "
        >
            <Keyboard
                class="size-14 bg-gray-900 p-2 text-blue-600 hover:bg-gradient-to-r from-red-500 to-pink-600 rounded-xl hover:text-white transition-all"
            />
            <h1
                class=" text-xl font-semibold  transition-all"
            >
                Technologies
            </h1>
        </div>
    </summary>
    <p class="flex mx-auto w-full mt-3">
        <Techonologies />
    </p>
</details>

<style>
    details summary{
        list-style: none;
    }
    details summary div::after{
        content: "👇🏻";
    }
    details[open] summary div::after {
        -webkit-animation: rotate-emoji 0.4s ease-in-out both;
        animation: rotateHand 0.6s ease-in-out both;
    }
    
    @keyframes rotateHand {
        0% {
            transform: rotate(0);
        }
        100% {
            transform: rotate(180deg);
        }
    }
</style>