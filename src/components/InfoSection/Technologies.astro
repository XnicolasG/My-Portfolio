---
import React from "../icons/React.astro";
import JavaScript from "../icons/JavaScript.astro";
import TypeScript from "../icons/TypeScript.astro";
import Redux from "../icons/Redux.astro";
import Firebase from "../icons/Firebase.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import Css from "../icons/Css.astro";
import Sql from "../icons/Sql.astro";
import Tailwind from "../icons/Tailwind.astro";
import Sass from "../icons/Sass.astro";
import Notion from "../icons/Notion.astro";
import Slack from "../icons/Slack.astro"
import Excel from "../icons/Excel.astro"
import Teams from "../icons/Teams.astro"

import SocialButtons from "../SocialNav/SocialButtons.astro";
import Supabase from "../icons/Supabase.astro";

const TAGS = {
    React: {
        Name: "React",
        class: "bg-grey-800 text-sky-600",
        icon: React,
    },
    Redux: {
        Name: "Redux",
        class: "text-purple-700 bg-white",
        icon: Redux,
    },
    Firebase: {
        Name: "Firebase",
        class: "bg-white text-black",
        icon: Firebase,
    },
    Astro: {
        Name: "Astro",
        class: "text-red-500 bg-white",
        icon: AstroIcon,
    },
    JavaScript: {
        Name: "JavaScript",
        class: "bg-yellow-400 text-back",
        icon: JavaScript,
    },
    CSS: {
        Name: "CSS",
        class: "bg-blue-500 text-white",
        icon: Css,
    },
    Sass: {
        Name: "Sass",
        class: "bg-white text-rose-500",
        icon: Sass,
    },
    Tailwind: {
        Name: "Tailwind",
        class: "bg-sky-600 text-white",
        icon: Tailwind,
    },
    Notion: {
        Name: "Notion",
        class: "bg-black",
        icon: Notion,
    },
};
const MAIN_TECHS = [
   { name: "React", icon: React },
   { name: "TypeScript", icon: TypeScript },
   { name: "JavaScript", icon: JavaScript },
   { name: "Tailwind", icon: Tailwind },
   { name: "Astro", icon: AstroIcon },
   { name: "CSS", icon: Css },
   { name: "Sass", icon: Sass },
   { name: "SQL", icon: Sql },         
   { name: "Supabase", icon: Supabase },
];
const TOOLS = [
   { name: "Slack", icon: Slack },
   { name: "Notion", icon: Notion },
   { name: "Teams", icons: Teams  },
   { name: "Excel", icon: Excel },
   { name: "SQL Server", icon: Sql }, 
];

---

<section class="relative flex w-60  sm:w-40 md:w-52 lg:w-72 mx-auto overflow-hidden bg-black rounded-xl">
    <div
        class="flex flex-row justify-center items-center w-full horizontal-slide"
    >
        {
            Object.values(TAGS).map((tag) => (
                <span class="inline-flex m-2 transition duration-100">
                    <SocialButtons>
                        <tag.icon class="size-4" />
                        {tag.Name}
                    </SocialButtons>
                </span>
            ))
        }
        {
            Object.values(TAGS).map((tag) => (
                <span class="inline-flex m-2 transition duration-100">
                    <SocialButtons>
                        <tag.icon class="size-4 " />
                        {tag.Name}
                    </SocialButtons>
                </span>
            ))
        }
    </div>
</section>

<style>
    .horizontal-slide {
        animation: InfiteSlide 10s linear infinite;
    }
    @keyframes InfiteSlide {
        0% {
            transform: translateX(-200%);
        }
        100% {
            transform: translateX(100%);
        }
    }
</style>
