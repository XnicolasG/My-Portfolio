---
import Next from "../icons/Next.astro";
import Sql from "../icons/Sql.astro";
import Three from "../icons/Three.astro";
import AI from "../icons/AI.astro";
import Azure from '../icons/Azure.astro'
import SocialButtons from '../SocialNav/SocialButtons.astro'


const topics = {
    Next: {
        Name: "Next.js",
        icon: Next,
        Status: "In queue",
    },
    AI: {
        Name: "AI",
        icon: AI,
        Status: "In queue",
    },
    SQL: {
        Name: "SQL",
        icon: Sql,
        Status: "In Progress",
    },
    "Three.jS": {
        Name: "Three.Js",
        icon: Three,
        Status: "In queue",
    },
    Azure:{
        Name:"Azure",
        icon: Azure,
        Status: 'In Progress'
    }
};
---

    <aside class="flex flex-col mt-4 justify-center items-center ">
        
        <h2
            class="text-lg lg:text-2xl font-extrabold bg-gradient-to-r from-purple-100 to-purple-200 bg-clip-text text-transparent mx-auto"
        >
          ●Interested in learning●
        </h2>
        <section class="flex flex-wrap w-[95%] justify-center items-center rounded-lg bg-gray-400/20 mt-1 mb-4 sm:mb-1">
            {
                Object.values(topics).map((topic) => (
                    <span class="inline-flex m-2 cursor-pointer">
                        <SocialButtons title={topic.Status}>
                            <topic.icon class='size-5' />
                            {topic.Name}
                        </SocialButtons>
                        </span>
                ))
            }
        </section>
    </aside>

