---
interface Props {
    Date: string;
    Title: string;
    Description: string;
}
const { Date, Title, Description } = Astro.props;
---


<article
    class="block w-[100%] p-2  border-t-2 pt-2 border-indigo-500 rounded-b-xl shadow-xl "
>
<p class="text-sm font-light text-white/60">
    {Date}
</p>
    <h5
        class="mb-2 text-base font-bold tracking-tight bg-gradient-to-r from-red-400 to-pink-600 bg-clip-text text-transparent"
    >
        {Title}
    </h5>
    <p class="text-sm md:text-base font-normal text-gray-700 dark:text-white">
        {Description}
    </p>
</article>
