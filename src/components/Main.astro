---
import Photo from "./Photo.astro";
import SocialNav from "./SocialNav/SocialNav.astro";
import Location from "../components/icons/Location.astro";
---

<section
    class="flex flex-col justify-center items-center relative rounded-2xl bg-gray-950 w-[95%] mx-auto sm:w-1/3 sm:ml-2 md:w-2/5 md:ml-4 p-4"
>
    <!-- <div class=" flex justify-center w-2/3 bg-red-400/60 h-80 rounded-lg absolute -top-80"> -->
    <div
        class="first:absolute h-80 -top-40 xs:-top-52 sm:-top-32 md:-top-44 lg:-top-32 xl:-top-32"
    >
        <Photo />
    </div>
    <!-- </div> -->
    <div class="flex flex-col mt-20 md:mt-16 lg:mt-32">
        <h1
            class="name text-2xl lg:text-4xl cursor-default mx-auto"
            title="Nicolás García López"
        >
            Nicolas Garcia Lopez
        </h1>

        <section
            class="flex justify-center items-center bg-gray-400/20 px-4 py-2 mt-2 rounded-md w-2/4 mx-auto"
        >
            <h2 class="text-white/60 text-sm md:text-md lg:text-lg xl:text-lg">
                Front End
            </h2>
        </section>
        <SocialNav />
        <section class="bg-gray-400/20 rounded-lg mt-4 p-4">
            <article class="flex gap-x-3 mb-2 hover:first:bg-gradient-to-r from-red-500 to-pink-600 rounded-xl hover:first:text-white transition-all">
                <Location class="size-14 bg-gray-900 p-2 text-blue-600 hover: transition-all" />
                <div class="">
                    <h2 class="text-gray-300">Location</h2>
                    <h1 class="text-xl font-semibold">Bogotá, Colombia</h1>
                </div>
            </article>
            <hr/>
            <article>

            </article>
        </section>
    </div>
</section>

<style>
    @font-face {
        font-family: "Handwind";
        src: url("/fonts/Handwind.ttf") format("truetype");
    }
    .name {
        font-family: "Handwind", cursive;
    }
</style>
