---
import { Image } from "astro:assets";
import meNy from '../img/Me-Ny-Edit.jpg'
import meCartoon from '../img/me.CartoonBg.png'
---
<article class="relative w-56 lg:w-64 transition-all ease-in duration-300 cursor-pointer ContImg " title='Hello World!'>
    <Image 
    class='first rounded-xl object-cover w-full'  
    src={meNy} alt='NYC' />
    <Image 
    class="second absolute bottom-0 left-4 right-0 mx-auto transform translate-y-[30%] transition ease-in-out duration-500 opacity-0 w-52" 
    src={meCartoon} alt='cartoon' />
</article>

<style>
    
    .ContImg:hover{
        transform: 
        perspective(200px)
        rotateX(10deg)
        translateY(-5%)
        translateZ(0)
        ;
    }
    .ContImg::before{
        content:'';
        position: absolute;
        bottom: 0;
        height: 100%;
        width: 100%;
        background-image:
        linear-gradient(
            to bottom,
            transparent 10%,
            rgba(0, 0, 0, 0.5) 50%,
            rgba(0,0,0)95%
        )
        ;
        opacity: 0;
        transition: all .2s ease;
    }
    .ContImg:hover::before{
        opacity: 1;
    }
    .ContImg:hover .second{
        opacity: 1;
        transform: translateY(5%);
    }
</style>