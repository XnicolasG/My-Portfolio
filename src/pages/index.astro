	<style>
		@font-face {
			font-family: "MigraItalic-ExtralightItalic";
			src: url("/fonts/MigraItalic-ExtralightItalic.ttf")
				format("truetype");
		}
		h1,
		.highlight,
		h2 {
			font-family: "Fjalla One", sans-serif;
		}
		.highlight {
			background-image: linear-gradient(
				to right,
				rgb(239, 40, 40),
				rgb(241, 54, 207)
			);
			-webkit-background-clip: text;
			color: transparent;
			letter-spacing: 0.05em;
		}
		.pretitle,
		.name {
			font-family: "MigraItalic-ExtralightItalic", italic;
		}
	</style>
